
set -x

alias build_mode_dynamic='export LD_LIBRARY_PATH=.'
alias build_mode_static='unset LD_LIBRARY_PATH'

alias build_fortran='FORTRAN128=false ./build-all'
alias build_fortran_default_128='FORTRAN128=true ./build-all'

alias mode_python='export exe=./Bh3d.py'
alias mode_vala='export exe=./Simulate'
alias mode_fortran_kds='export exe=./FortranKdS'
alias mode_fortran_newton='export exe=./FortranNewton'
alias mode_fortran_oscillator='export exe=./FortranOscillator'

mode_remote () {
	export exe="nc.openbsd $1 $2"
}

set +x

