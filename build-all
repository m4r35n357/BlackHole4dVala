#!/bin/sh

opt="${1:-0}"

valac="valac -v --save-temps -X -O$opt -X -lm --pkg json-glib-1.0"
valac --version
which valac

outfile='utils'
executables='bh3d nbody3d newton'

# cleanup
rm -f utils.c symplectic.c
rm -f $outfile $executables bh3d.rk4 raytrace-commands kerr-image icgen

# compile vala files
valafiles="${outfile}.vala symplectic.vala"
for executable in $executables
do
	rm -f ${executable}.c
	valafiles="$valafiles ${executable}.vala"
done
$valac $valafiles

# hard link executables
for executable in $executables
do
	ln $outfile $executable
done
rm -f $outfile

rm -f bh3d.rk4.c raytrace-commands.c
$valac bh3d.rk4.vala
$valac raytrace-commands.vala

gcc -o kerr-image kerr-image.c -Ofast -Wall -std=c99 -pedantic -Wextra -Wno-unused-result -lm

valac -q --save-temps -X -w -X -lm --pkg gsl icgen.vala

# strip executables
case $opt in
	fast)	strip $executables bh3d.rk4 raytrace-commands kerr-image icgen;;
esac

# admire our work
ls -lAh --color $executables bh3d.rk4 raytrace-commands kerr-image icgen

