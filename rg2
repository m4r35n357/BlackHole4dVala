#!/bin/sh

params='{ "method": "dnewton", "rMin": 3.0, "rMax": 12.0, "elevation": 63.0, "spin": 1.0, "Lfac": 1.0 }'

data=${1:-$params}
timeCoord=${2:-'tau'}
timeStep=${3:-0.5}

C='\033[0;36m'
NC='\033[0m' # No Color

# Generate the parameter file
ic='initial-conditions.json'
pot='/tmp/potential'
echo $data | ./icgenParticle >$ic 2>$pot
echo $data | jq .

# Pretty-print the parameter file
jq . $ic

# Run the simulator
datafile='/tmp/data'
echo -n ${C}"Simulating with $data . . . "
case $(echo $data | jq .integrator) in
	rk4*)	./KdS <$ic >$datafile;;
	*)	./KdS <$ic | ./finterp.py $timeCoord $timeStep >$datafile;;
esac
echo "Done!"${NC}

# Plot errors
#./plotErrors.py $timeCoord 1 <$datafile &
./plotErrors.py $timeCoord $(echo $(jq .IC.duration $ic) / $(jq .IC.step $ic) / $(jq .IC.plotratio $ic) / 2000 | bc) <$datafile &

# Plot potentials
./plotPotential.py <$pot &

# Plot 3D graphics
./plotBH.py <$datafile $(jq .IC.M $ic) $(jq .IC.a $ic) $(jq .IC.L $ic) `jq .IC.mu $ic` &

